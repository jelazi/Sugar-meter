<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TypeIngredientActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="40sp"
                android:text="Jméno suroviny" />

            <TextView
                android:id="@+id/value_ingredient"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="40sp"
                android:text="0.0 g/100g" />




            <Button
                android:id="@+id/btn_save_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ulož surovinu" />

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>